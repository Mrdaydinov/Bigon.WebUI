@model List<Color>

<div class="card">
    <div class="card-header">
        <h5>Colors</h5>
        <a class="btn btn-success" asp-action="create" asp-controller="color">+Add</a>
    </div>
    <div class="card-block table-border-style">
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th>Color</th>
                        <th>Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var color in Model)
                    {
                        <tr>
                            <td><span color style="background:@color.HexCode"></span></td>
                            <td>@color.Name</td>
                            <td>
                                <a class="btn btn-primary"><i class="fa-solid fa-info text-white"></i></a>
                                <a class="btn btn-warning"><i class="fa-solid fa-warning text-white"></i></a>
                                <a class="btn btn-danger"><i class="fa-solid fa-trash text-white"></i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<style>
    span[color]{
        display:inline-block;
        width:30px;
        height:30px;
        border-radius:100%;
        border:1px solid #cdcdcd
    }
</style>